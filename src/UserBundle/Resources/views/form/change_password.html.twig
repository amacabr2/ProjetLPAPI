{% extends 'UserBundle:Default:layout.html.twig' %}

{% block content %}

    <div class="row justify-content-md-center justify-content-sm-center justify-content-center">
        <div class="col-6 col-offset-3">
            {{ form_start(form, {'attr': {'class': 'form-horizontal well'}}) }}
                <legend>Change ton mot de passe</legend>
                <fieldset>
                    <div class="form-group">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password) }}
                        {{ form_errors(form.password) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password_confirmation) }}
                        {{ form_widget(form.password_confirmation) }}
                        {{ form_errors(form.password_confirmation) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Valider</button>
                    </div>
                    {{ form_rest(form) }}
                </fieldset>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}